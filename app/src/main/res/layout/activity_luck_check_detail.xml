<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LuckCheckDetailActivity">
    <!--툴바-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/toolbar"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="531dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/card_check_detail"/>
            <ImageView
                android:id="@+id/card_detail"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="230dp"
                android:layout_marginLeft="29.5dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/img_riches_good"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:paddingLeft="180dp"
                android:paddingBottom="20dp"
                android:src="@drawable/btn_share"/>
        </FrameLayout>
        <TextView
            android:id="@+id/text_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoserif"
            android:textSize="17dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="매점 아줌마한테 간식 얻어먹을 것만 같은 날"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_check_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="매점을 들려 맛있는 간식을 사먹는다면..\n행복해지고 말 거야\n매점 아주머니께서 맛있는 걸 덤으로 주실지도!!"
            android:textSize="14dp"
            android:fontFamily="@font/notoserif"
            android:textColor="#fff"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/btn_save"
            android:layout_margin="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/btn_save"
            android:layout_gravity="center"/>
    </LinearLayout>
    </ScrollView>
    <!--바텀바-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bottombar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="62dp"
                android:text="보관함"
                android:textColor="#80ffffff"/>
            <ImageView
                android:id="@+id/btn_check"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:src="@drawable/mainbtn_img"/>
            <TextView
                android:id="@+id/text_tool"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="62dp"
                android:text="설정"
                android:textColor="#80ffffff"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>