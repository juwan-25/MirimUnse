<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dlg_back"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_horizontal"
        android:textColor="@color/btn_color"
        android:fontFamily="@font/notoserif"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="운세 결과 저장하기"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/btn_color"
        android:fontFamily="@font/notoserif"
        android:text="운세 결과의 제목을 적어보세요!"/>
    <EditText
        android:id="@+id/edit_save"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textSize="16dp"
        android:paddingHorizontal="25dp"
        android:textColor="@color/btn_color"
        android:fontFamily="@font/notoserif"
        android:background="@drawable/edit_dlg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_sp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dlg"
            android:text="저장하기"
            android:textColor="#FBDADA"
            android:fontFamily="@font/notoserif"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_sn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dlg2"
            android:text="취소"
            android:textColor="@color/btn_color"
            android:fontFamily="@font/notoserif"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>